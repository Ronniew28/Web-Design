button {
  background-color: white;
}


button1:hover {
  background-color: yellow;
       color: green;
}

button2 {
  background-color: pink;
}

button2 span {
  background-color: pink;
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

button2 span:after {
  background-color:green;
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

button2:hover span {
  background-color: purple;
  padding-right: 25px;
}

button2:hover span:after {
  opacity: 1;
  right: 0;
}


